        android:name="com.path_studio.nike.ui.main.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.path_studio.nike.ui.main.search.SearchFragment"
